<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dimen_6_dp"
    android:paddingTop="@dimen/dimen_6_dp">


    <TextView
        android:layout_centerVertical="true"
        android:text=""
        android:id="@+id/commodityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black" />
        <!--android:paddingLeft="@dimen/dimen_20_dp"-->

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/choiceLayout"
        android:layout_toRightOf="@+id/commodityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_30_dp"
        android:gravity="center|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/Myappcolor" />

        <TextView
            android:id="@+id/commodityPrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_3_dp"
            android:textColor="@color/Myappcolor" />

        <TextView
            android:id="@+id/commodityNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_3_dp"
            android:text="件"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/choiceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:background="@drawable/shape_round">
            <TextView
                android:id="@+id/reduce"
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:layout_marginBottom="1dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/shoppingNum"
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:background="@drawable/shape_productnum_bg"
            android:gravity="center_vertical|center"
            android:maxLength="10"
            android:text="0"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14_dp" />


        <LinearLayout
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:background="@drawable/shape_round">
            <TextView
                android:id="@+id/increase"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="+"
                android:textSize="12dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>