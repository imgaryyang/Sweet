<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/theme_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_margin"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <include layout="@layout/layout_search"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <cn.forward.androids.views.StringScrollPicker
                android:id="@+id/sc_picker"
                android:layout_width="150dp"
                android:layout_height="20dp"
                app:spv_center_item_position="0"
                app:spv_is_circulation="true"
                app:spv_max_text_size="20dp"
                app:spv_min_text_size="15dp"
                app:spv_orientation="horizontal"
                />


            <com.lucky.sweet.views.CircleImageView
                android:id="@+id/imv_head"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/test_head"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray5"/>

    </LinearLayout>


    <ListView
        android:id="@+id/lv_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none">

    </ListView>


</LinearLayout>