<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/selector_lv_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <TextView
                android:layout_toRightOf="@+id/tv_comment_name"
                android:id="@+id/tv_comment_repert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 评论了 "
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:layout_toRightOf="@+id/tv_comment_repert"
                android:id="@+id/tv_comment_repert_pero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:textSize="16dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="华丽的水晶灯投下淡淡的光，使整个餐厅显得优雅而静谧。"
            android:textColor="@color/gray3"
            android:textSize="12dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/imv_my_comment"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@mipmap/test_food"/>
    </LinearLayout>



</LinearLayout>