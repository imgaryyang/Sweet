            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_btn_order"
            android:onClick="submitCreate"
            android:text="创建房间"
            android:textColor="@color/white"/>
