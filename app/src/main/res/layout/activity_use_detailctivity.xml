<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray0"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayDividerDark" />
    <LinearLayout
        android:id="@+id/persionalInfoHead"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/selector_item_click"
        android:gravity="center_vertical"
        android:onClick="onButtonClick"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="头像"
            style="@style/setItemTextFirst"/>

        <com.lucky.sweet.views.CircleImageView
            android:id="@+id/imv_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/test_head"/>

        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginRight="7dp"
            android:padding="8dp"
            android:src="@mipmap/ic_arrow"/>
    </LinearLayout>

    <include layout="@layout/layout_melist_divider_20" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_item_click"
        android:gravity="center_vertical">
        <android.support.design.widget.TextInputLayout
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">

            <EditText
                android:id="@+id/edt_change_nikname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="修改匿名" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_change_nikeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClick"
            android:text="确认"
            android:layout_marginRight="7dp"
            android:layout_gravity="right|center"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="16dp" />
    </LinearLayout>

    <include layout="@layout/layout_melist_divider_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_item_click"
        android:gravity="center_vertical">
        <android.support.design.widget.TextInputLayout
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">

            <EditText
                android:id="@+id/edt_chang_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="修改密码" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_change_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClick"
            android:text="确认"
            android:layout_marginRight="7dp"
            android:layout_gravity="right|center"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="16dp" />
    </LinearLayout>

</LinearLayout>