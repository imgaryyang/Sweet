<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp">

    <com.lucky.sweet.views.ImageViewExtend
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/test_head"
        android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/circle_add"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/circle_love"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/circle_star"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/circle_callout"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_circle_bg"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="我住隔壁我姓王"/>
            <TextView
                android:layout_width="37dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:text="lv.11"
                android:textSize="12dp"
                android:textColor="#AACF25"
                android:gravity="center"
                android:background="@drawable/shape_level_bg"/>
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="11:20"
                android:textSize="12dp"
                android:textColor="#FF646464"
                android:gravity="right"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="装修很不错，关顾着拍照了哈哈，不过菜品也很好吃的！"/>

        <!--<com.lucky.sweet.views.CircleGrideView-->
            <!--android:id="@+id/grv_circleimg"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:horizontalSpacing="3dp"-->
            <!--android:numColumns="3"-->
            <!--android:verticalSpacing="3dp"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:layout_marginLeft="8dp"-->
            <!--android:layout_marginRight="8dp">-->
        <!--</com.lucky.sweet.views.CircleGrideView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/test_one"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/test_one"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="70dp"
                android:src="@mipmap/test_one"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/circle_like"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="213"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>

