<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_store_part_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sv_storeInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:overScrollMode="never"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--  <include layout="@layout/layout_title"/>-->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imv_back"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:background="@mipmap/test_imvback"
                        android:scaleType="fitXY"/>


                    <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:background="@drawable/shape_roundbtn_bg">

                    <ImageButton
                        android:id="@+id/ibtn_back"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:onClick="photoBack"
                    android:background="@drawable/selector_btn_titlebackblack"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/shape_roundbtn_bg"
                        android:gravity="center">

                        <ImageButton
                            android:src="@mipmap/shopstar"
                            android:id="@+id/imb_store_collect"
                            android:layout_width="13dp"
                            android:layout_height="16dp"
                            android:background="@null"
                            android:layout_gravity="center"
                            android:onClick="onButtonClick" />
                    </FrameLayout>


                </FrameLayout>


                <TextView
                    android:id="@+id/tv_shop_title"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="器生茶时"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_shop_int"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="这是一家香喷喷的店铺"
                    android:textColor="@color/gray6"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业时间："
                        android:textColor="@color/gray6"/>

                    <TextView
                        android:id="@+id/tv_shop_worktime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="8:00-12:00"
                        android:textColor="@color/gray6"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人均消费："
                        android:textColor="@color/gray6"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="CNY 80/人"
                        android:textColor="@color/gray6"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_shop_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/test_storeinfo"
                    android:textColor="@color/gray6"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="推荐美食："
                        android:textColor="@color/black"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/tv_moreFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="180dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="right|center"
                        android:onClick="onButtonClick"
                        android:text="查看更多>"
                        android:textColor="@color/Myappcolor"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imv_show_fir"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/imv_show_sec"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/imv_show_sed"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_evr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="店内环境："
                        android:textColor="@color/black"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/tv_moreevr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="180dp"
                        android:gravity="right|center"
                        android:onClick="onButtonClick"
                        android:text="查看更多>"
                        android:textColor="@color/Myappcolor"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imv_shop_one"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                />

                    <ImageView
                        android:id="@+id/imv_shop_two"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                         />

                    <ImageView
                        android:id="@+id/imv_shop_three"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                     />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="地图"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_weight="2"
                        android:background="@color/black"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.tencent.tencentmap.mapsdk.map.MapView
                        android:id="@+id/map"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp">

                    </com.tencent.tencentmap.mapsdk.map.MapView>

                    <Button
                        android:id="@+id/btn_map_position"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="23dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/selector_btn_map"
                        android:scaleType="fitXY"/>

                    <Button
                        android:layout_gravity="bottom|left"
                        android:id="@+id/btn_more_map_detal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详细信息" />
                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="圈子"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_weight="2"
                        android:background="@color/black"/>

                </LinearLayout>

                <com.lucky.sweet.views.MyListView
                    android:id="@+id/lv_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:divider="#00000000">

                </com.lucky.sweet.views.MyListView>


            </LinearLayout>

            <!--        </FrameLayout>-->

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">-->

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/gray0"/>-->


            <!--</LinearLayout>-->


        </ScrollView>

        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="@mipmap/ic_tab_shadow"/>-->


        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

        <include layout="@layout/layout_orderstore"/>
        </LinearLayout>-->

        <Button
            android:id="@+id/btn_order"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/btn_order_bg"
            android:text="预订"
            android:textColor="@color/white"/>


    </LinearLayout>

    <include layout="@layout/layout_order_content"/>


</FrameLayout>