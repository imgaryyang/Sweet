<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/layout_title"/>
                <ImageView
                    android:id="@+id/imv_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/test_imvback"/>

                <TextView
                    android:id="@+id/tv_shop_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="器生茶时"
                    android:textColor="#000"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/tv_shop_int"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="这是一家香喷喷的店铺"
                    android:textColor="@color/gray6"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业时间："
                        android:textColor="@color/gray6"/>

                    <TextView
                        android:id="@+id/tv_shop_worktime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="8:00-12:00"
                        android:textColor="@color/gray6"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人均消费："
                        android:textColor="@color/gray6"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="CNY 80/人"
                        android:textColor="@color/gray6"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_shop_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/test_storeinfo"
                    android:textColor="@color/gray6"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="推荐美食："
                        android:textColor="@color/black"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/tv_moreFood"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:onClick="onButtonClick"
                        android:text="查看更多>"
                        android:textColor="@color/gray6"
                        android:textSize="13dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imv_show_fir"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                />

                <ImageView
                    android:id="@+id/imv_show_sec"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
           />

                <ImageView
                    android:id="@+id/imv_show_sed"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
               />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_evr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="店内环境："
                        android:textColor="@color/black"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/tv_moreevr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:onClick="onButtonClick"
                        android:text="查看更多>"
                        android:textColor="@color/gray6"
                        android:textSize="13dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:background="@mipmap/test_one"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:background="@mipmap/test_second"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:background="@mipmap/test_third"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="地图"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_weight="2"
                        android:background="@color/black"/>

                </LinearLayout>

                <!--<com.tencent.tencentmap.mapsdk.map.MapView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="200dp"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:layout_marginRight="15dp"-->
                    <!--android:layout_marginTop="15dp"/>-->
            <com.tencent.tencentmap.mapsdk.map.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="圈子"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_weight="2"
                        android:background="@color/black"/>

                </LinearLayout>

                <ListView
                    android:id="@+id/lv_circle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#00000000"
                    android:layout_marginTop="10dp">

                </ListView>


            </LinearLayout>


    </ScrollView>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray0"/>

        <include layout="@layout/layout_orderstore"/>

    </LinearLayout>


</FrameLayout>