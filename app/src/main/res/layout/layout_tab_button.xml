<?xml version="1.0" encoding="utf-8"?>
<com.lucky.sweet.widgets.TabButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabItemLayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:clickable="true"
    android:focusable="true" >

    <LinearLayout
        android:id="@+id/tabFrontCell"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tabFrontImg"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_tab_contract_sel"
            android:clickable="false"
            android:focusable="false"/>

        <TextView
            android:id="@+id/tabFrontTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:text="通信录"
            android:textColor="#AACF25"
            android:textSize="9dp"
            android:clickable="false"
            android:focusable="false"/>
    </LinearLayout>


