<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlack"
    tools:context="com.lucky.sweet.activity.UserLoginActivity">

    <ImageView
        android:id="@+id/im_logo"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:clickable="false"
        android:focusable="false"
        android:src="@mipmap/registerlogo"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/im_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱号："
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/ed_userID"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_email"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext_normal"
            android:hint="请输入邮箱账号"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_userID"
            android:layout_marginTop="10dp"
            android:text="密码："
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_password"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext_normal"
            android:hint="请输入邮箱账号"/>

        <TextView
            android:id="@+id/tv_authcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_password"
            android:layout_marginTop="10dp"
            android:text="验证码："
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/ed_authcode"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_authcode"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext_normal"
            android:hint="请输入验证码"/>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_authcode">

            <Button
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button_user_register"
                android:text="注册"
                android:textColor="@color/white"/>

            <View
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button

                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button_user_login"
                android:text="登陆"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
