<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/title_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_margin"
            android:layout_width="wrap_content"
            android:layout_height="18dp"/>
    </LinearLayout>

    <fragment
        android:layout_below="@id/title_msg"
        android:id="@+id/fg_shop_car"
        android:name="com.lucky.sweet.model.shoppingcar.fragment.ProductsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"/>

    <View
        android:id="@+id/vv_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/app_bg"
        android:visibility="gone"/>


        <android.support.v4.view.ViewPager
            android:id="@+id/vp_dishes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clipChildren="false"
            android:overScrollMode="never"
            android:visibility="gone"/>


        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_cancle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="540dp"
            android:visibility="gone"/>



</RelativeLayout>