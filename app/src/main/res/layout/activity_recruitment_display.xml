<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lucky.sweet.activity.RecruitmentDisplayActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dishes_title"
            android:layout_width="@dimen/dimen_60_dp"
            android:layout_height="@dimen/dimen_50_dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:gravity="center|bottom"
            android:text="菜品"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_dishes_over"
            android:layout_width="@dimen/dimen_50_dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_dishes_title"
            android:layout_alignBottom="@+id/tv_dishes_title"
            android:layout_toEndOf="@+id/tv_dishes_title"
            android:gravity="center"
            android:text="环境"/>

        <TextView

            android:id="@+id/textView"
            android:layout_width="@dimen/dimen_50_dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_dishes_over"
            android:layout_alignBottom="@+id/tv_dishes_over"
            android:layout_toEndOf="@+id/tv_dishes_over"
            android:gravity="center|bottom"
            android:text="其它"/>

        <Button
            android:id="@+id/btn_back_store"
            android:layout_width="@dimen/dimen_35_dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:background="@mipmap/down"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingLeft="@dimen/dimen_21_dp"
        android:paddingRight="@dimen/dimen_21_dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_cover_photo_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>


    </ScrollView>

</LinearLayout>
